<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - APLIACACIONWEB_APIPLUS_BLOGUDLA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WEBAplicacionDeGestionDeCitasMedicas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <i class="fas fa-ship me-2"></i>APLICACIONWEB_APIPLUS_BLOGUDLA
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BlogFica" asp-action="Index">
                                <i class="fas fa-book me-1"></i>BlogFica
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="BlogNodo" asp-action="Index">
                                <i class="fas fa-book me-1"></i>BlogNodo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CommentFica" asp-action="Index">
                                <i class="fas fa-comments me-1"></i>CommentFica
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CommentNodo" asp-action="Index">
                                <i class="fas fa-comments me-1"></i>CommentNodo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="Index">
                                <i class="fas fa-users me-1"></i>Users
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container text-center">
            <span>&copy; 2024 - APLIACACIONWEB_APIPLUS_BLOGUDLA</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white ms-2">Privacidad</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
