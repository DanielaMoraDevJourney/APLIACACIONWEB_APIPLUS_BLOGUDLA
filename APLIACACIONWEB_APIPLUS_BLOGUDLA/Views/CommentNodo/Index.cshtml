@model IEnumerable<APLIACACIONWEB_APIPLUS_BLOGUDLA.Models.CommentNodo>

@{
    ViewData["Title"] = "CommentNodo";
}

<h1>CommentNodo</h1>

<p>
    <a asp-action="Create" asp-route-blogNodoId="@ViewBag.BlogNodoId">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Contenido)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Contenido)</td>
                <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
